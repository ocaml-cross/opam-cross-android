depends: ["ocaml-android"]
build: [
  ["ocaml" "pkg/git.ml"]
  ["env" "OCAMLFIND_TOOLCHAIN=android" "ocaml" "pkg/build.ml" "native=%{ocaml-native}%" "native-dynlink=%{ocaml-native-dynlink}%"]
]
install: [
  ["sh" "-c" "opam-installer --prefix=$(ocamlfind -toolchain android printconf destdir)/.. react.install"]
]
remove: [
  ["ocamlfind" "-toolchain" "android" "remove" "react"]
]
